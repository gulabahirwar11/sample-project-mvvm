<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_8dp">

    <TextView
        android:id="@+id/company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ltp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LTP"
        android:textSize="@dimen/text_h3"
        app:layout_constraintRight_toLeftOf="@+id/ltp" />

    <TextView
        android:id="@+id/ltp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_4dp"
        android:paddingRight="@dimen/padding_4dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/net_quantity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let QTY"
        android:layout_marginTop="@dimen/margin_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/company_name"
        android:textSize="@dimen/text_h3"
        app:layout_constraintRight_toLeftOf="@+id/net_quantity" />

    <TextView
        android:id="@+id/net_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_4dp"
        android:paddingRight="@dimen/padding_4dp"
        android:layout_marginLeft="@dimen/padding_4dp"
        app:layout_constraintLeft_toRightOf="@+id/net_quantity_text"
        app:layout_constraintTop_toTopOf="@+id/net_quantity_text" />

    <View
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/net_quantity_text"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/pl_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P&amp;L"
        app:layout_constraintRight_toLeftOf="@+id/profit_loss"
        android:layout_marginTop="@dimen/margin_16dp"
        app:layout_constraintTop_toBottomOf="@+id/ltp"
        android:paddingLeft="@dimen/padding_4dp"
        android:paddingRight="@dimen/padding_4dp"
        />

    <TextView
        android:id="@+id/profit_loss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/margin_16dp"
        app:layout_constraintTop_toBottomOf="@+id/company_name"
        android:textSize="@dimen/text_h3" />

</androidx.constraintlayout.widget.ConstraintLayout>